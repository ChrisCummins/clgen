# A package for the Linux source tree.

package(default_visibility = ["//visibility:public"])

# Linux sources as filegroups.

filegroup(
    name = "kernel_c_srcs",
    srcs = glob(["kernel/**/*.c"]),
)

filegroup(
    name = "kernel_c_hdrs",
    srcs = glob(["kernel/**/*.h"]),
)

filegroup(
    name = "includes",
    srcs = glob(["include/**/*"]),
)
